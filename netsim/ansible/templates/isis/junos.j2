protocols {
  delete: isis;
}
protocols {
  isis {
{% if 'ipv6' in isis %}
    topologies {
      ipv6-unicast;
    }
{% endif %}
    interface lo0.0;
{% for l in interfaces|default([]) if 'isis' in l %}
    interface {{ l.ifname }} {
{%   if l.isis.network_type is defined %}
      {{ l.isis.network_type }};
{%   endif %}
{%   if l.isis.passive %}
      passive;
{%   endif %}
{%   if l.isis.metric is defined or l.isis.cost is defined %}
      level 1 metric {{ l.isis.metric|default(l.isis.cost) }};
      level 2 metric {{ l.isis.metric|default(l.isis.cost) }};
      level 1 ipv6-unicast-metric {{ l.isis.metric|default(l.isis.cost) }};
      level 2 ipv6-unicast-metric {{ l.isis.metric|default(l.isis.cost) }};
{%   endif %}
    }
{% endfor %}
  }
}
security {
  forwarding-options {
    family {
      iso {
        mode packet-based;
      }
    }
  }
}

interfaces {
  lo0 {
    unit 0 {
      family iso {
{% if isis.net is defined %}
        address {{ isis.net }}
{% elif isis.area is defined %}
        address {{ "%s.0000.0000.%04d.00" % (isis.area,id) }}
{% endif %}
      }
    }
  }
{% for l in interfaces|default([]) if 'isis' in l %}
  {{ l.ifname }} {
    unit 0 {
      family iso;
    }
  }
{% endfor %}
}
