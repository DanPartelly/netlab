{% if ospf_vrf %}
router ospf {{ ospf_pid }} vrf {{ ospf_vrf }}
{% else %}
router ospf {{ ospf_pid }}
{% endif %}
{#
  Get local- or global OSPF router ID. Global is always set
#}
{% set router_id = ospf_data.router_id|default(ospf.router_id) %}
{% if router_id|ipv4 %}
 router-id {{ router_id }}
{% endif %}
 interface unnumbered hello mask tx 0.0.0.0
{% if ospf_vrf and bgp.as is defined %}
 redistribute bgp include leaked
{% endif %}
{#
  Get local- or global reference bandwidth. It might be missing
#}
{% set bw = ospf_data.reference_bandwidth|default(ospf.reference_bandwidth|default(False)) %}
{% if bw %}
 auto-cost reference-bandwidth {{ ospf.reference_bandwidth }}
{% endif %}
{% for l in intf_data if l.ospf.passive|default(False) %}
 passive-interface {{ l.ifname }}
{% endfor %}
!
{% if not ospf_vrf %}
interface Loopback0
 ip ospf area {{ ospf.area }}
!
{% endif %}
{% for l in intf_data if 'ospf' in l and 'ipv4' in l %}
interface {{ l.ifname }}
! {{ l.name|default("") }}
 ip ospf area {{ l.ospf.area }}
{%   if l.ospf.network_type|default("") in ["broadcast","point-to-point"] %}
{%     if l.ospf.network_type == "broadcast" %}
 no ip ospf network
{%     else %}
 ip ospf network {{ l.ospf.network_type }}
{%     endif %}
{%   endif %}
{%   if l.ospf.cost is defined %}
 ip ospf cost {{ l.ospf.cost }}
{%   endif %}
{%   if l.ospf.bfd|default(False) %}
 ip ospf neighbor bfd
{%   endif %}
!
{% endfor %}
